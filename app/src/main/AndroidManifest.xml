<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fotolibb.fabion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".EventsByDaysScrollActivity"
            android:label="@string/title_activity_events_by_days_scroll"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventsByMonthsScrollingActivity"
            android:label="@string/title_activity_events_by_months_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".OneDayEventsViewActivity" />
        <activity
            android:name=".EventDetailActivity"
            android:label="@string/title_activity_event_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>