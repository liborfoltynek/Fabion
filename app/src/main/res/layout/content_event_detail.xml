<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fotolibb.fabion.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cell"
        >

        <TableRow>
            <TextView
                android:text="Login: "
                android:backgroundTint="#00FF00"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin" />

            <EditText
                android:id="@+id/eventDetailLogin"
                android:layout_span="3"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:text="" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Subjekt: "
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin" />

            <EditText
                android:id="@+id/eventDetailSubject"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_span="4"
                android:enabled="false"
                android:text="" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="ÄŒas: "
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin" />

            <EditText
                android:id="@+id/eventDetailTimeFrom"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:text="" />
            <TextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin" />
            <EditText
                android:id="@+id/eventDetailTimeTo"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:text="" />
        </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
