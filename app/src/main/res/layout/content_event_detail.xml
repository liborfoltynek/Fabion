<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fotolibb.fabion.EventDetailActivity"
    tools:showIn="@layout/activity_event_detail">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:backgroundTint="#00FF00"
            android:text="Login: " />

        <EditText
            android:id="@+id/eventDetailLogin"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginStart="@dimen/text_margin"
            android:enabled="false"
            android:text="" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:text="Popis: " />

        <EditText
            android:id="@+id/eventDetailSubject"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginStart="@dimen/text_margin"
            android:enabled="false"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:text="Čas: " />

        <EditText
            android:id="@+id/eventDetailTimeFrom"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:focusable="false"
            android:layout_marginStart="@dimen/text_margin"
            android:enabled="false"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_column="2"
            android:layout_marginStart="@dimen/text_margin"
            android:text=" - " />

        <EditText
            android:id="@+id/eventDetailTimeTo"
            android:layout_width="wrap_content"
            android:layout_column="3"
            android:focusable="false"
            android:layout_marginStart="@dimen/text_margin"
            android:enabled="false"
            android:text="" />

        <TextView android:layout_width="wrap_content"
            android:layout_column="0"
            android:text="Datum: " />

        <EditText
            android:id="@+id/eventDetailDate"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginStart="@dimen/text_margin"
            android:enabled="false"
            android:text="" />

        <TextView
            android:id="@+id/eventDetailEditNoteLabel"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:text="Poznámka: " />

        <EditText
            android:id="@+id/eventDetailEditNote"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginStart="@dimen/text_margin"
            android:enabled="false"
            android:text="" />


        <Button
            android:id="@+id/eventDetailOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:gravity="center"
            android:text="OK"
            android:visibility="gone"
            android:onClick="onClick"
            />
    </GridLayout>


</android.support.v4.widget.NestedScrollView>
